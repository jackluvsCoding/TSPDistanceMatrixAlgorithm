package main;

import java.io.FileNotFoundException;
import java.io.IOException;

import org.json.simple.JSONObject;
import org.json.simple.parser.ParseException;

import api.Get;

public class Main {

	public static void main(String[] args) throws FileNotFoundException, IOException, ParseException {

		Get get = new Get();

		JSONObject jsonObject = get.distanceMatrixAPI("38.587704,-122.575908", "38.590216,-122.594063");

		System.out.println("[Origin]: \t" + getAddress(jsonObject, "origin_addresses"));
		System.out.println("[Destination]: \t" + getAddress(jsonObject, "destination_addresses"));
		System.out.println("[Distance]: \t" + getElement(jsonObject, "distance"));
		System.out.println("[Duration]: \t" + getElement(jsonObject, "duration"));

		System.out.println(jsonObject.toString());

	}

}
